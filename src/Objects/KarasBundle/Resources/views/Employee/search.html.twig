{% extends '::base.html.twig' %}
{% block activeRequest %} active{% endblock %}
{% block title %}Search People{% endblock %}
{% block javascripts %}
    {{ parent()  }}
    <script type="text/javascript" src="{{ asset('js/jquery-ui.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/chosen.jquery.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/tag-it.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            $(".search-chzn-select").chosen({
                width: "100%"
            });
            $('.chzn-container-multi').attr('style', 'width: 80% !important')
            $('#keywords').tagit();
            $('.tagit').css('margin', '0px');
        })
    </script>
    
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/jquery.tagit.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('css/tagit.ui-zendesk.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('css/chosen.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('css/jquery-ui.css') }}"/>
{% endblock %}

{% block body %}

<h3>Find People :</h3>
<form action="{{ path('objects_karas_employee_filter') }}" method="post">
    <div class="container">
        <div class="row">
            <div class="span3">
                <h4>Industry</h4>
                <select name="industry" data-placeholder="select keywords..." style="width:285px;"  class="search-chzn-select">
                    <option value="any">All Industries</option>
                    {% for industry in industries %}
                        <option value="{{ industry.id }}">{{ industry.title }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="span3">
                <h4>Profession</h4>
                <select name="profession" data-placeholder="select keywords..." style="width:285px;"  class="search-chzn-select">
                    <option value="any">All Professions</option>
                    {% for profession in professions %}
                        <option value="{{ profession.id }}">{{ profession.title }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="span3">
                <h4>Nationality</h4>
                <select name="nationality" data-placeholder="select keywords..." style="width:285px;"  class="search-chzn-select">
                    <option value="any">Any Country</option>
                    {% for key, country in countries %}
                        <option value="{{ key }}">{{ country }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="span3">
                <h4>Location</h4>
                <select name="location" data-placeholder="select keywords..." style="width:285px;"  class="search-chzn-select">
                    <option value="any">Any Country</option>
                    {% for key, country in countries %}
                        <option value="{{ key }}">{{ country }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="span3">
                <h4>Languages</h4>
                <select name="languages[]" data-placeholder="select keywords..." style="width:285px;" multiple class="search-chzn-select">
                    <option value="arabic">Arabic</option>
                    <option value="english">English</option>
                    <option value="spanish">Spanish</option>
                    <option value="germany">Germany</option>
                </select>
            </div>
            <div class="span3">
                <h4>Born After</h4>
                <input type="date" name="dob" />
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="span3">
                <h4>Title</h4>
                <input  type="text" name="title" />
            </div>
            <div class="span3">
                <h4>Company</h4>
                <input type="text" name="company" placeholder="Company name" />
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="span3">
                <h4>Experience-From</h4>
                <input  type="number" name="experience1" placeholder="Experience Years Number"/>
            </div>
            <div class="span3">
                <h4>Experience-To</h4>
                <input type="number" name="experience2" placeholder="Experience Years Number" />
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="span6">
                    <h4>Keywords</h4>
                    <input id="keywords" type="text" name="keywords" />
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <hr class="hr1" />
    <button class="btn btn-large btn-block btn-info" type="submit">Search<i class="icon-white icon-circle-arrow-right"></i></button>
</form>
<br><br>
{% endblock %}