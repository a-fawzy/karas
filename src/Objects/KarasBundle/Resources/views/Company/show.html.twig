{% extends '::base.html.twig' %}

{% block body -%}
    <h3>Employer Company Profile</h3>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Company Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>About Company</th>
                <td>{{ entity.about }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ countries[entity.countryCode] }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ entity.phone }}</td>
            </tr>
            <tr>
                <th>Fax</th>
                <td>{{ entity.fax }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ entity.website }}</td>
            </tr>
            <tr>
                <th>Work From</th>
                <td>{{ entity.workFrom|date('H:i')  }}</td>
            </tr>
            <tr>
                <th>Work To</th>
                <td>{{ entity.workTo|date('H:i') }}</td>
            </tr>
            <tr>
                <th>P.O Box</th>
                <td>{{ entity.poBox }}</td>
            </tr>
            <tr>
                <th>Is Public</th>
                <td>{% if  entity.public == true %}Yes{% else %} No {% endif %}</td>
            </tr>
            <tr>
                <td colspan="2">
                    <h3>Contact Person Info</h3>
                </td>
            </tr>
            <tr>
                <th>Contact Person Name</th>
                <td>{{ entity.contactName }}</td>
            </tr>
            <tr>
                <th>Contact Person Position</th>
                <td>{{ entity.contactPosition }}</td>
            </tr>
            <tr>
                <th>Contact Person E-mail</th>
                <td>{{ entity.contactEmail }}</td>
            </tr>
            <tr>
                <th>Contact Person Phone</th>
                <td>{{ entity.contactPhone }}</td>
            </tr>
            <tr>
                <th>Contact Person Mobile</th>
                <td>{{ entity.contactMobile }}</td>
            </tr>
            <tr>
                <th>Contact Persomn Address</th>
                <td>{{ entity.contactAddress }}</td>
            </tr>
        </tbody>
    </table>
<br/>
{% endblock %}
