{% extends '::base.html.twig' %}

{% block title %}{% trans %}LinkedIn Sign up{% endtrans %}{% endblock %}

{% block body %}

{% for elementError in form.vars.errors %}
<div class="alert alert-error">
    {{ elementError.message }}<a href="#" class="close" data-dismiss="alert">&times;</a>
</div>
{% endfor %}

{{ form_start(form) }}

    {{ form_errors(form.email.Email) }}<br>
    <label>{% trans %}Email{% endtrans %}:</label>
    {{ form_widget(form.email.Email) }}<br/>

    <label>{% trans %}ReEmail{% endtrans %}:</label>
    {{ form_widget(form.email.ReEmail) }}<br>

    <input type="submit" title="{% trans %}Sign up{% endtrans %}" value="{% trans %}Sign up{% endtrans %}" />
{{ form_end(form) }}
{% endblock %}